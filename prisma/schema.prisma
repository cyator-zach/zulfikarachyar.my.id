// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Profile {
  id              String          @id @default(uuid())
  created_at      DateTime        @default(now()) @db.Timestamptz(6)
  updated_at      DateTime        @updatedAt @db.Timestamptz(6)
  name            String
  bio             String
  email           String          @unique
  image_url       String
  portfolio_items PortfolioItem[]
  tutorials       Tutorial[]

  @@map("profiles")
}

model PortfolioItem {
  id          String   @id @default(uuid())
  created_at  DateTime @default(now()) @db.Timestamptz(6)
  updated_at  DateTime @updatedAt @db.Timestamptz(6)
  title       String
  description String
  image_url   String
  image_hint  String
  challenge   String
  solution    String
  results     String
  tags        String[]
  live_url    String?
  repo_url    String?
  author      Profile? @relation(fields: [author_id], references: [id])
  author_id   String?

  @@map("portfolio_items")
}

model Experience {
  id            String   @id @default(uuid())
  created_at    DateTime @default(now()) @db.Timestamptz(6)
  updated_at    DateTime @updatedAt @db.Timestamptz(6)
  position      String
  company       String
  duration      String
  description   String
  display_order Int

  @@map("experiences")
}

model Tutorial {
  id          String   @id @default(uuid())
  created_at  DateTime @default(now()) @db.Timestamptz(6)
  updated_at  DateTime @updatedAt @db.Timestamptz(6)
  title       String
  description String
  image_url   String
  image_hint  String
  category    String
  content     String
  author      Profile? @relation(fields: [author_id], references: [id])
  author_id   String?

  @@map("tutorials")
}
