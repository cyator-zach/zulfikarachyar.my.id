model Profile {
  id              String            @id @default(uuid())
  name            String
  email           String            @unique
  bio             String
  image_url       String
  created_at      DateTime          @default(now()) @db.Timestamptz(6)
  updated_at      DateTime          @updatedAt @db.Timestamptz(6)
  portfolio_items PortfolioItem[]
  tutorials       Tutorial[]
}

model PortfolioItem {
  id          String    @id @default(uuid())
  title       String
  description String
  image_url   String
  image_hint  String
  challenge   String
  solution    String
  results     String
  tags        String[]
  live_url    String?
  repo_url    String?
  author_id   String?
  created_at  DateTime  @default(now()) @db.Timestamptz(6)
  updated_at  DateTime  @updatedAt @db.Timestamptz(6)
  author      Profile?  @relation(fields: [author_id], references: [id])

  @@map("portfolio_items")
}

model Experience {
  id            String   @id @default(uuid())
  position      String
  company       String
  duration      String
  description   String
  display_order Int
  created_at    DateTime @default(now()) @db.Timestamptz(6)
  updated_at    DateTime @updatedAt @db.Timestamptz(6)

  @@map("experiences")
}

model Tutorial {
  id          String   @id @default(uuid())
  title       String
  description String
  content     String
  category    String
  image_url   String
  image_hint  String
  author_id   String?
  created_at  DateTime @default(now()) @db.Timestamptz(6)
  updated_at  DateTime @updatedAt @db.Timestamptz(6)
  author      Profile? @relation(fields: [author_id], references: [id])

  @@map("tutorials")
}
